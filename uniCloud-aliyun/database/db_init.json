{
  "users": {
    "data": [],
    "index": [
      {
        "IndexName": "phone_index",
        "MgoKeySchema": {
          "MgoIndexKeys": [{
            "Name": "phone",
            "Direction": "1"
          }],
          "MgoIsUnique": true
        }
      }
    ],
    "schema": {
      "bsonType": "object",
      "required": ["phone", "createTime"],
      "properties": {
        "_id": {
          "description": "ID，系统自动生成"
        },
        "phone": {
          "bsonType": "string",
          "description": "手机号",
          "pattern": "^1[3-9]\\d{9}$",
          "title": "手机号"
        },
        "openid": {
          "bsonType": "string",
          "description": "一键登录openid",
          "title": "OpenID"
        },
        "createTime": {
          "bsonType": "number",
          "description": "创建时间戳",
          "title": "创建时间"
        },
        "lastLoginTime": {
          "bsonType": "number",
          "description": "最后登录时间戳",
          "title": "最后登录时间"
        },
        "loginType": {
          "bsonType": "string",
          "description": "登录类型：sms-验证码登录，oneclick-一键登录",
          "enum": ["sms", "oneclick"],
          "title": "登录类型"
        }
      }
    }
  },
  "sms_codes": {
    "data": [],
    "index": [
      {
        "IndexName": "phone_code_index",
        "MgoKeySchema": {
          "MgoIndexKeys": [
            {
              "Name": "phone",
              "Direction": "1"
            },
            {
              "Name": "code",
              "Direction": "1"
            }
          ],
          "MgoIsUnique": false
        }
      },
      {
        "IndexName": "expireTime_index",
        "MgoKeySchema": {
          "MgoIndexKeys": [{
            "Name": "expireTime",
            "Direction": "1"
          }],
          "MgoIsUnique": false
        }
      }
    ],
    "schema": {
      "bsonType": "object",
      "required": ["phone", "code", "expireTime", "createTime", "used"],
      "properties": {
        "_id": {
          "description": "ID，系统自动生成"
        },
        "phone": {
          "bsonType": "string",
          "description": "手机号",
          "pattern": "^1[3-9]\\d{9}$",
          "title": "手机号"
        },
        "code": {
          "bsonType": "string",
          "description": "验证码",
          "pattern": "^\\d{6}$",
          "title": "验证码"
        },
        "expireTime": {
          "bsonType": "number",
          "description": "过期时间戳",
          "title": "过期时间"
        },
        "createTime": {
          "bsonType": "number",
          "description": "创建时间戳",
          "title": "创建时间"
        },
        "used": {
          "bsonType": "bool",
          "description": "是否已使用",
          "title": "是否已使用"
        },
        "usedTime": {
          "bsonType": "number",
          "description": "使用时间戳",
          "title": "使用时间"
        }
      }
    }
  }
}